{
  "name": "@qiwi/common-formatters",
  "version": "0.5.0",
  "description": "Common string formatters",
  "main": "lib/es5/index.js",
  "scripts": {
    "clean": "rm -rf lib typings",
    "jest": "BABEL_ENV=test NODE_ENV=test jest --no-cache -w 1 --detectOpenHandles  --config jest.config.json",
    "lint": "standard-flow src/**/*.js --fix",
    "test": "yarn lint && yarn flow && yarn jest",
    "build": "yarn clean && yarn build_es5 && yarn build_es6 && yarn build_ts",
    "test_with_report": "npm test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "doc": "documentation build src/main/** -f html -o docs",
    "docs": "yarn doc",
    "build_es5": "mkdir -p lib/es5 && tsc -p tsconfig.json --target ES5 --outDir lib/es5",
    "build_es6": "mkdir -p lib/es6 && tsc -p tsconfig.json --target ES6 --outDir lib/es6",
    "build_ts": "cp -r src/main/ lib/ts/",
    "build_ts_libdefs": "yarn dtsgen && yarn tsfix",
    "build_flow_libdefs": "yarn flowgen && yarn flowfix",
    "build_libdefs": "yarn build_ts_libdefs && yarn build_flow_libdefs && yarn append"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/common-formatters.git"
  },
  "keywords": [
    "format",
    "common formatters"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@types/jest": "^24.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-preset-minify": "^0.5.0",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "lodash": "^4.17.11",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "tslib": "^1.9.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
